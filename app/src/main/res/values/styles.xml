<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- TextView -->
        <item name="android:textViewStyle">@style/Widget.Guardian.TextView</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowBackground">@color/gray5</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red50</item>
    </style>

    <!-- TextViewStyle for AppTheme -->
    <style name="Widget.Guardian.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Guardian.Text.Body</item>
    </style>

    <!-- Font family -->
    <style name="TextAppearance.Guardian.Metropolis.Regular" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>
    <style name="TextAppearance.Guardian.Metropolis.SemiBold" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/metropolis_semibold</item>
        <item name="android:fontFamily">@font/metropolis_semibold</item>
    </style>
    <style name="TextAppearance.Guardian.Inter.Regular" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <style name="TextAppearance.Guardian.Inter.SemiBold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <!-- TextAppearance defined in Guardian -->
    <style name="TextAppearance.Guardian.Title10" parent="TextAppearance.Guardian.Metropolis.Regular">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Guardian.Title20" parent="TextAppearance.Guardian.Metropolis.SemiBold">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Guardian.Byline10" parent="TextAppearance.Guardian.Inter.Regular">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Guardian.Byline20" parent="TextAppearance.Guardian.Inter.Regular">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Guardian.Header10" parent="TextAppearance.Guardian.Metropolis.Regular">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Guardian.Header20" parent="TextAppearance.Guardian.Metropolis.SemiBold">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Guardian.Caption10" parent="TextAppearance.Guardian.Inter.Regular">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.Guardian.Caption20" parent="TextAppearance.Guardian.Inter.SemiBold">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.Guardian.Body10" parent="TextAppearance.Guardian.Inter.Regular">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Guardian.Body20" parent="TextAppearance.Guardian.Inter.SemiBold">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- TextAppearance for body -->
    <style name="TextAppearance.Guardian.Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

</resources>
