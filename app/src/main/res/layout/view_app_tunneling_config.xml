<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bg_popup_window">

    <TextView
        android:id="@+id/system_apps_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/app_tunneling_config_system_apps"
        android:textColor="@color/gray50"
        android:textAppearance="@style/TextAppearance.Guardian.Body10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/system_apps_checkbox"/>

    <CheckBox
        android:id="@+id/system_apps_checkbox"
        android:button="@drawable/selector_bg_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintTop_toTopOf="@id/system_apps_text"
        app:layout_constraintBottom_toBottomOf="@id/system_apps_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/new_apps_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/app_tunneling_config_new_apps"
        android:textColor="@color/gray50"
        android:textAppearance="@style/TextAppearance.Guardian.Body10"
        app:layout_constraintTop_toBottomOf="@id/system_apps_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/new_apps_checkbox"/>

    <TextView
        android:id="@+id/new_apps_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_tunneling_config_new_apps_description"
        android:textColor="@color/gray40"
        android:textAppearance="@style/TextAppearance.Guardian.Byline10"
        app:layout_constraintTop_toBottomOf="@id/new_apps_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/new_apps_text"/>

    <CheckBox
        android:id="@+id/new_apps_checkbox"
        android:button="@drawable/selector_bg_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintTop_toTopOf="@id/new_apps_text"
        app:layout_constraintBottom_toBottomOf="@id/new_apps_text"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
